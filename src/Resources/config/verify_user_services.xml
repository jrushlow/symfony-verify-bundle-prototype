<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="symfonycasts.verify_user.url_utility" class="SymfonyCasts\Bundle\VerifyUser\Util\VerifyUserUrlUtility" public="false" />
        <service id="symfonycasts.verify_user.signing_wrapper" class="SymfonyCasts\Bundle\VerifyUser\Util\VerifyUserUriSigningWrapper" public="false">
            <argument>%kernel.secret%</argument>
        </service>

        <service id="symfonycasts.verify_user.query_utility" class="SymfonyCasts\Bundle\VerifyUser\Util\VerifyUserQueryUtility" public="false">
            <argument type="service" id="symfonycasts.verify_user.url_utility" />
        </service>

        <service id="SymfonyCasts\Bundle\VerifyUser\VerifyUserHelperInterface" alias="symfonycasts.verify_user.helper" />
        <service id="symfonycasts.verify_user.helper" class="SymfonyCasts\Bundle\VerifyUser\VerifyUserHelper">
            <argument type="service" id="router.default" />
            <argument type="service" id="symfonycasts.verify_user.signing_wrapper" />
            <argument type="service" id="symfonycasts.verify_user.query_utility" />
            <argument /> <!-- verify user signature lifetime -->
        </service>
    </services>
</container>
